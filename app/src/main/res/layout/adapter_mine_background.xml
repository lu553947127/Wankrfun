<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp">

   <com.wankrfun.crania.widget.CornerImageView
       android:id="@+id/iv_image"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       roundiv:radius="10dp"
       android:scaleType="centerCrop"
       android:src="@drawable/icon_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:src="@drawable/icon_bg_select_bt"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_bg_select"
        android:visibility="gone"/>

</RelativeLayout>